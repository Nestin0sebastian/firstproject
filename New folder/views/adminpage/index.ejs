<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8">
  <title>Admin Home Page</title>

  <!-- Add Bootstrap CSS from the CDN -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/css/bootstrap.min.css">
  <link rel="stylesheet" href="/stylesheets/admin.css">
  <style>
    /* Add this style to change the table appearance */
    table.table {
      background-color: black;
      color: white;
    }
  </style>
</head>
<body>
  <div class="container">
    <!-- Buttons in the top-right corner -->
    <div class="d-flex justify-content-between align-items-center">
      <h1 class="mb-4">Admin Home Page</h1>
      <div>
        <a href="/admin/adduser"><button class="btn btn-add btn-primary mr-2">Add</button></a>
        <a href="/logout"><button class="btn btn-logout btn-secondary">Logout</button></a>
      </div>
    </div>


    <!-- Search bar -->
    <div class="input-group mb-3">
      <input type="text" class="form-control" placeholder="Search users" id="searchInput">
      <div class="input-group-append">
        <button class="btn btn-outline-secondary" type="button" id="searchButton">Search</button>
      </div>
    </div>

    <!-- User details table -->
    <table class="table table-striped">
      <thead>
        <tr>
          <th>First Name</th>
          <th>Last Name</th>
          <th>Email</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <%x.forEach((y)=>{%>
        <tr>
          <td><%=y.firstname%></td>
          <td><%=y.lastname%></td>
          <td><%=y.email%></td>
          <td><%=y.email%></td>
          <td class="d-flex justify-content-sm-between">
            <a href="/admin/Edituser?id=<%= y._id %>"><button class="btn btn-info btn-sm">Edit</button></a>
            <form action="/admin/deleteUser/<%= y._id %>" method="post">
              <button type="submit" class="btn btn-danger btn-sm">Delete</button>
            </form>
          </td>
        </tr>
        <%})%>
        <!-- Add more user rows here -->
      </tbody>
    </table>
  </div>

  <!-- Add jQuery and Bootstrap JavaScript from the CDN -->
  <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/js/bootstrap.min.js"></script>
  <script src="/javascripts/admin.js"></script>
</body>
</html>
